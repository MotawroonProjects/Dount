<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.apps.dount.model.UserModel" />

        <variable
            name="lang"
            type="String" />

        <variable
            name="cartCount"
            type="String" />


        <import type="android.view.View" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".uis.activity_home.HomeActivity"

        >

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:openDrawer="start"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consData"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.appbar.AppBarLayout
                        android:id="@+id/appBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolBar"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@color/white"
                            app:layout_scrollFlags="scroll|enterAlways|snap">


                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_search"
                                android:visibility="gone"

                                />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/home_logo" />

                            <FrameLayout
                                android:id="@+id/flCart"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:clickable="false"
                                    android:longClickable="false"
                                    android:padding="8dp"
                                    android:src="@drawable/ic_cart2"

                                    />

                                <TextView
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/circle_primary"
                                    android:clickable="false"
                                    android:gravity="center"
                                    android:longClickable="false"
                                    android:singleLine="true"
                                    android:text='@{String.valueOf(cartCount),default="0"}'
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </FrameLayout>


                            <ImageView
                                android:id="@+id/imgNotification"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_notification"

                                />


                        </androidx.appcompat.widget.Toolbar>
                    </com.google.android.material.appbar.AppBarLayout>

                    <fragment
                        android:id="@+id/navHostFragment"
                        android:name="androidx.navigation.fragment.NavHostFragment"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:defaultNavHost="true"
                        app:navGraph="@navigation/nav_graph" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:elevation="0dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="@color/gray3"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"

                                >

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/imgProfile"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="8dp"
                                    app:cardCornerRadius="20dp">

                                    <ImageView
                                        android:id="@+id/image"
                                        image="@{model.data.photo}"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/circle_avatar" />
                                </androidx.cardview.widget.CardView>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:src="@drawable/ic_hi" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="@string/hi"
                                            android:textColor="@color/gray4"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tvName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_marginTop="10dp"
                                        android:text='@{model==null?@string/login:model.data.first_name+" "+model.data.last_name,default=@string/login}'
                                        android:textColor="@color/black2"
                                        android:textSize="15sp"

                                        />


                                </LinearLayout>


                                <ImageView
                                    android:id="@+id/imLogOut"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="end"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/ic_logout"
                                    android:visibility='@{model==null?View.GONE:View.VISIBLE,default=gone}' />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_clicked"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_home" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/home"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:padding="8dp" />

                        <LinearLayout
                            android:id="@+id/llMyOrders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_clicked"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_orders" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/myOrders"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:padding="8dp" />

                        <LinearLayout
                            android:id="@+id/favourite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_clicked"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_favourite" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/favourite"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:padding="8dp" />

                        <LinearLayout
                            android:id="@+id/llcart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_clicked"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_cart" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/cart"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:padding="8dp" />

                        <LinearLayout
                            android:id="@+id/llEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:visibility='@{model==null?View.GONE:View.VISIBLE,default=gone}'>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_edit_acc" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/edit_profile"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/viewEditAcc"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:padding="8dp"
                            android:visibility='@{model==null?View.GONE:View.VISIBLE,default=gone}' />

                        <LinearLayout
                            android:id="@+id/wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_clicked"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_wallet" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/wallet"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:padding="8dp" />

                        <LinearLayout
                            android:id="@+id/shareApp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_clicked"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_share" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/share"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:padding="8dp" />

                        <LinearLayout
                            android:id="@+id/contactUs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_clicked"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_contact_us" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/contact_us"
                                android:textSize="18sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:padding="8dp" />

                        <LinearLayout
                            android:id="@+id/llChangeLangeuage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_clicked"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/ic_language"
                                app:tint="@color/color2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/language_setting"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </com.google.android.material.navigation.NavigationView>

        </androidx.drawerlayout.widget.DrawerLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

